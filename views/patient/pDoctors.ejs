<script>

  let selectedTime=null;
  
  function doctorData(id){
    $.ajax({
        url:"/patient/doctor/"+id,
        method:"post",
        success:function(r){
                $("#dName").text(r.data.first_name+" "+r.data.last_name);
                $("#pDoc").text(r.data.first_name+" "+r.data.last_name);
                $("#did").val(r.data.id);
                let times=r.data.times.split(",");
                let str="";
                if(times !=null){
                  for(let i=0;i<times.length;i++){
                   str+=' <li class="list-group-item d-flex justify-content-between align-items-center">'
                    +'<div class="form-check">'
                    +    '<label class="form-check-label" for="check1">'
                     +   `  <input type="checkbox" class="form-check-input" id="check1" name="option1" value="${times[i]}" onclick="onlyOne(this)">${times[i]}`
                     +  ' </label>'
                     + '</div>'
                    "</li>";
                  }
                  $("#timesData").html(str);
                }
                $('#myModal').modal('show');
        },error:function(err){
           console.error(err);
        }
    });

   


  
  }

  

  function onlyOne(checkbox) {
    var checkboxes = document.getElementsByName('option1');
      selectedTime=checkbox.value;
      console.log(selectedTime);
    checkboxes.forEach((item) => {
        if (item !== checkbox) item.checked = false;
    })
}


function add(p_id)
{
  let s=null;
  var checkboxes = document.getElementsByName('option1');
   checkboxes.forEach((item)=>{
      if(item.checked){
         s=item.value;
      }
   });

   if(s!=null){
     $.ajax({
       url:"/patient/addappointment",
       method:"POST",
       data:{pid:p_id,did:$("#did").val(),time:s},
       success:function(r){
         if(r.status){
           Swal.fire("Success","Request send for appointment","success");
         }
       },
       error:function(e){
         console.error(e);
       }
     })
   }

}

</script>



