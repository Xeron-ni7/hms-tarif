<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title> <%=user.username%></title>
		<link rel="icon" type="image/png" href="/ext/img/icon/hospital_flat_round_icon_with_long_shadow_vector_7538947_rOf_2.ico"/>
		<link href="/ext/css/animation.css" rel="stylesheet"/>
		<link href="/ext/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
		<script src="/ext/js/jquery.min.js"></script>
		<script src="/ext/bootstrap/dist/js/bootstrap.min.js" ></script>
		<!--Font awesome-->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
	</head>
	<style>
		input{
			width: 80%;
		}

		td{
			color: gainsboro;
		}
	</style>
<body>
		<div class="container">
			<div class="jumbotron" style="background-color:#3d3d3d;">
				<!-- <img
				  src="/ext/images/writter/default.png"
				  height="150"
				  style="border-radius: 50%"
				/> -->
				<h1 style="color: whitesmoke">Welcome <%= user.username%>  </h1>
				<a style="float:right;" href="/home">Home</a>
		   </div>

		   <div class="card" style=" padding: 10px;">
			   <div class="card-header" style="background-color: #cd6133;">
				   <h2>Account Information</h2>
			   </div>
			   <div class="card-body" style="background-color: #4b4b4b;">
				   <table style="width: 100%;">
					   <tbody>
						<tr>
							<td>
							   Name
							</td>
							<td>
							   <input type="text" value='<%=user.username%>' name='name' id="name"/>
							</td>
							<td>
								<button class="btn btn-outline-success" onclick="updateName('<%=user.id%>')">Update</button>
							</td>
						</tr>
						<tr>
						 <td>
							Email
						 </td>
						 <td>
							<input type="email" value='<%=user.email%>' name='email' id="email"/>
						 </td>
						 <td>
							 <button class="btn btn-outline-success" onclick="updateEmail('<%=user.id%>')">Update</button>
						 </td>
					 </tr>
					 <tr>
						 <td>
							Password
						 </td>
						 <td>
							<input type="password" value='<%=user.password%>' name='pass' id="pass"/>
						 </td>
						 <td>
							 <button class="btn btn-outline-success" onclick="updatePassword('<%=user.id%>')">Update</button>
						 </td>
					 </tr>
					
					   </tbody>
					   
				   </table>
			   </div>
		   </div>
		   <br/>
		   
		   
          
		   <!--For Patients-->
		   <%if(user.status=='patient'){%>
            <div class="card" style="padding: 10px;">
				<div class="card-header " style="background-color: #16a085;color: ivory;"><h3>Address</h3></div>
				<div class="card-body">
                    <h4 style="text-align: center;"><i><%=user.address%></i></h4>
                    <button class="btn btn-outline-success" onclick="updateAddress('<%=user.id%>')">Update</button>

				</div>
			</div>
			<br/>
			

			<div class="card" style="padding: 10px;">
				<div class="card-header " style="background-color: #d35400;color: ivory;"><h3>Cause</h3></div>
				<div class="card-body"  style="padding: 10px;">
                    <h4 style="text-align: center;"><i><%=user.cause%></i></h4>
                    <button class="btn btn-outline-success" onclick="updateCause('<%=user.id%>')">Update</button>

				</div>
			</div>
			<br/>
			

			<div class="card" style="padding: 10px;">
				<div class="card-header " style="background-color: #8e44ad;color: ivory;"><h3>Fee</h3><h3 style="float: right;"><%=total%> tk</h3></div>
				<div class="card-body">
					
						<table class="table table-dark">
							<thead>
								<tr>
									<th>Details</th>
									<th>Count</th>
									<th>Price</th>
								</tr>
							</thead>
							<tbody>
								<%  for(let i=0;i<me.length;i++){%>
								<tr>
									<td><%=me[i].details%></td>
									<td><%=me[i].count%></td>
									<td><%=me[i].pp%></td>
								</tr>
								<%}%>
							</tbody>

						</table>
				</div>
			</div>
			<%}%>
		   <!--end of patients-->


			 <!--For Doctors-->
			 <%if(user.status=='Doctor'){%>
			 <div class="card" style="padding: 10px;">
				<div class="card-header " style="background-color: #16a085;color: ivory;"><h3>Address</h3></div>
				<div class="card-body">
					<h4 style="text-align: center;"><i>Demo</i></h4>
				</div>
			</div>
			<br/>
			

			<div class="card" style="padding: 10px;">
				<div class="card-header " style="background-color: #d35400;color: ivory;"><h3>Department</h3></div>
				<div class="card-body" style="padding: 10px;">
					<div class="row">
						<h4 class="col-sm-8">
							<select class="form-control ">
								<option>Psychiatry</option>
								<option>Orthopedic</option>
								<option>Genral Medicine</option>
							</select>
						</h4>
					    <button class="btn btn-info " style="margin: 0 auto;">Update</button>
					</div>
				</div>
			</div>
			<br/>
			

			<div class="card" style="padding: 10px;">
				<div class="card-header " style="background-color: #8e44ad;color: ivory;"><h3>Time</h3></div>
				<div class="card-body">
					<div class="row">
						<h4 class="col-sm-8"><input class="form-control " type="time" id="dtime" /></h4>
					    <button class="btn btn-info" style="margin: 0 auto;">Update</button>
					</div>
				</div>
			</div>


			<div class="card" style="padding: 10px;">
				<div class="card-header " style="background-color: #ccae62;color: ivory;"><h3>Fee</h3></div>
				<div class="card-body">
					
					<div class="row">
						<h4 class="col-sm-8" ><input class="form-control"  type="number" id="dfee" value="0.00"/></h4>
					    <button class="btn btn-info" style="margin: 0 auto;">Update</button>
					</div>
				</div>
			</div>
			<%}%>
		   <!--end of doctor-->

		</div>
</body>
<script>
    function updateName(id){
        alert("updated");
        location.href="/patient/update/name/"+$("#name").val()+"/"+id;
    }
    function updateEmail(id){
        alert("updated");
        location.href="/patient/update/email/"+$("#email").val()+"/"+id;
    }
    function updatePassword(id){
        alert("updated");
        location.href="/patient/update/password/"+$("#pass").val()+"/"+id;
    }
    function updateAddress(id){
        let val=prompt("Emnter an address");
        if(val){
            alert("updated")
            location.href="/patient/update/address/"+val+"/"+id;
        }
    }
    function updateCause(id){
        let val=prompt("Emnter an cause of sickness");
        if(val){
            alert("updated")
            location.href="/patient/update/cause/"+val+"/"+id;
        }
    }
  
</script>
</html>