}


function add(p_id)
{
  let s=null;
  var checkboxes = document.getElementsByName('option1');
   checkboxes.forEach((item)=>{
      if(item.checked){
         s=item.value;
      }
   });

   if(s!=null){
     $.ajax({
       url:"/patient/addappointment",
       method:"POST",
       data:{pid:p_id,did:$("#did").val(),time:s},
       success:function(r){
         if(r.status){
           Swal.fire("Success","Request send for appointment","success");
         }
       },
       error:function(e){
         console.error(e);
       }
     })
   }

}

